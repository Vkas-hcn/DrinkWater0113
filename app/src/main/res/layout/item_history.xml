<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.HomeFragment">



    <LinearLayout
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="14dp"
        android:background="@mipmap/item_histoy_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="87dp">

        <TextView
            android:drawableTop="@mipmap/item_woter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/woter"
            android:gravity="center_horizontal"
            tools:text="1080ml"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="#FF262626"
            android:textStyle="bold"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:drawableTop="@mipmap/item_cupss"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/cupss"
            android:layout_gravity="center_vertical"
            tools:text="3Cups"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:textColor="#FF262626"
            android:textStyle="bold"
            android:layout_height="wrap_content"></TextView>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/complet"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:gravity="center"
                tools:text="Complete"
                tools:background="@mipmap/item_green_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/timeTv"
                android:layout_gravity="end|center_vertical"
                tools:text="2025/1/10"
                android:textColor="#FFB3B3B3"
                android:layout_marginEnd="11dp"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:id="@+id/rateTv"
                android:layout_gravity="end|center_vertical"
                tools:text="100%"
                tools:textColor="#FF12BA88"
                android:textStyle="bold"
                android:layout_marginEnd="84dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </FrameLayout>

    </LinearLayout>


