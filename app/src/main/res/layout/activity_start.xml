<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/history_top_bg"
        android:layout_height="200dp">
    </ImageView>

    <LinearLayout
        android:background="@mipmap/start_bg"
        android:layout_marginTop="81dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="Stay healthy by starting with water."
            android:textColor="#FF093CA7"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <TextView
            android:text="To help you stay at your best,please set your daily water intake goal"
            android:textColor="#FF6072CF"
            android:textSize="14sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="Today's goal"
            android:textColor="#FF141A1E"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        
        <LinearLayout
            android:layout_marginTop="18dp"
            android:layout_width="120dp"
            android:layout_height="36dp">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/input"
                android:textSize="24sp"
                android:digits="1234567890"
                android:inputType="number"
                android:text="2500"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"></EditText>
            <TextView
                android:text="ML"
                android:textColor="#FF141A1E"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <ImageView
            android:background="#FFD3E1FD"
            android:layout_width="120dp"
            android:layout_height="2dp"></ImageView>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:insetBottom="0dp"
        android:layout_marginBottom="56dp"
        app:cornerRadius="12dp"
        android:insetTop="0dp"
        android:id="@+id/yes"
        android:textAllCaps="false"
        android:text="Start"
        android:layout_marginHorizontal="32dp"
        android:layout_gravity="bottom"
        android:layout_height="48dp"></com.google.android.material.button.MaterialButton>


</FrameLayout>