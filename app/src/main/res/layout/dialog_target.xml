<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    tools:background="#A6000000"
    android:layout_height="match_parent">





    <FrameLayout
        android:layout_marginHorizontal="32dp"
        android:background="@drawable/cor12"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Add"
            android:textColor="#FF333333"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_height="wrap_content"></TextView>


        <FrameLayout
            android:layout_marginTop="64dp"
            android:layout_width="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="36dp">
            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="100dp"
                android:id="@+id/input"
                android:gravity="center"
                android:textColorHint="#ccc"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:digits="1234567890"
                tools:text="250000"
                android:textStyle="bold"
                android:maxLength="5"
                android:inputType="number"
                android:hint="Enter"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatEditText>

            <TextView
                android:layout_width="wrap_content"
                android:text="ml"
                android:textColor="#FF333333"
                android:layout_gravity="center_vertical|end"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_height="wrap_content"></TextView>

            <ImageView
                android:background="#FFEEEEEE"
                android:layout_gravity="bottom"
                android:layout_width="90dp"
                android:layout_height="1dp"></ImageView>
        </FrameLayout>


        <LinearLayout
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="129dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">
            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:insetTop="0dp"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                android:id="@+id/cancel"

                android:text="Cancel"
                android:insetBottom="0dp"
                android:backgroundTint="#FFDEDDDD"
                android:layout_weight="1"
                android:layout_height="match_parent"
                ></com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:insetTop="0dp"
                android:id="@+id/confirm"
                app:cornerRadius="12dp"
                android:textAllCaps="false"
                android:layout_marginStart="20dp"
                android:text="Confirm"
                android:insetBottom="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                ></com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>