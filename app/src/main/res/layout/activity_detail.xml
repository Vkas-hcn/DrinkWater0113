<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.HistoryFragment">

    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/history_top_bg"
        android:layout_height="200dp">
    </ImageView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="60dp"
            android:id="@+id/back"
            android:background="@android:color/transparent"
            android:src="@mipmap/back_white"
            android:layout_height="match_parent"></androidx.appcompat.widget.AppCompatImageButton>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            tools:text="History"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="wrap_content"></TextView>

    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="12dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/cor8"
        android:layout_width="match_parent"
        android:layout_height="94dp">

        <FrameLayout
            android:layout_marginVertical="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/cor8"
            android:backgroundTint="#FFE8F4FF"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="Cup"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FF0094FF"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_width="wrap_content"
                tools:text="3"
                android:layout_marginBottom="8dp"
                android:id="@+id/cupss"
                android:layout_marginStart="8dp"
                android:textSize="15sp"
                android:layout_gravity="bottom"
                android:textStyle="bold"
                android:textColor="#FF262626"
                android:layout_height="wrap_content"></TextView>
        </FrameLayout>

        <FrameLayout
          android:layout_margin="12dp"
            android:background="@drawable/cor8"
            android:backgroundTint="#FFE8F4FF"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:text="ml"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FF0094FF"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:layout_width="wrap_content"
                tools:text="1000"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:id="@+id/woter"
                android:textSize="15sp"
                android:layout_gravity="bottom"
                android:textStyle="bold"
                android:textColor="#FF262626"
                android:layout_height="wrap_content"></TextView>
        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                tools:text="100%"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/pgTv"
                android:textColor="#FF0646B0"
                android:layout_height="wrap_content"></TextView>

        </FrameLayout>


        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="match_parent"
                android:max="100"
                app:indicatorInset="0dp"
                app:trackColor="#FFD5D5D5"
                app:trackCornerRadius="3dp"
                app:indicatorColor="#FF0646B0"
                android:id="@+id/pg"
                tools:progress="70"
                android:layout_gravity="center"
                app:indicatorSize="70dp"
                app:trackThickness="6dp"
                android:layout_height="match_parent"></com.google.android.material.progressindicator.CircularProgressIndicator>

            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/his_top_woter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></ImageView>

        </FrameLayout>


    </LinearLayout>


   <FrameLayout
       android:background="@drawable/history_b_bg"
       android:layout_marginTop="180dp"
       android:layout_width="match_parent"
       android:layout_marginHorizontal="12dp"
       android:layout_height="match_parent">
       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:id="@+id/rv"
           android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
   </FrameLayout>

</FrameLayout>